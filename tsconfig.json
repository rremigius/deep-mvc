{
	"compilerOptions": {
		"target": "es2017",
		"sourceMap": true,
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		],
		"skipLibCheck": true
	},
	"ts-node": {
		"files": true
	},
	"files": ["src/index.ts"],
	"exclude": ["node_modules"],
	"include": ["@types"]
}

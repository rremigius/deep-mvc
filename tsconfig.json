{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"outDir": "./dist",
		"declaration": true,
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
